%html
  %body
    %h1
      Books of 
      = @author.title
    %table.ui.table.segment.collapsing
      %thead
        %tr
          %th Cover
          %th Title
          %th Author
          %th Publisher
      %tbody
        - @books.each do |book|
          %tr
            %td
              %img{:src => book.cover.url(:thumb)}/
            %td
              = book.title
            %td
              - if book.author != nil?
                = book.author.title
            %td
              = book.publisher
